<Page
    x:Class="RasterStudio.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RasterStudio"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sbd="using:SamuelBlanchard.Xaml.Controls" xmlns:usercontrols="using:RasterStudio.UserControls"
    mc:Ignorable="d"
    Background="#1f1f1f">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">

            <FontIcon Glyph="&#xF58A;" Margin="10,0,4,0"/>
            
            <MenuBar>
                <MenuBarItem Title="Project">
                    <MenuFlyoutItem Text="New" Icon="Document" Width="200"/>
                    <MenuFlyoutItem x:ConnectionId='9' Text="Open"                           />
                    <MenuFlyoutItem x:ConnectionId='10' Text="Save"                           />
                    <MenuFlyoutSeparator />
                    <MenuFlyoutItem Text="Exit"/>
                </MenuBarItem>
                <MenuBarItem Title="Edit">
                    <MenuFlyoutItem Text="Copy color" Width="200"/>
                    <MenuFlyoutItem x:ConnectionId='8' Text="Paste color"                           />
                </MenuBarItem>
                <MenuBarItem Title="Display">
                    <ToggleMenuFlyoutItem x:ConnectionId='6' Text="All rasters" IsChecked="True" Width="200"                                 />
                    <ToggleMenuFlyoutItem x:ConnectionId='7' Text="Blank screen"                                  />
                </MenuBarItem>
                <MenuBarItem Title="Help">
                    <MenuFlyoutItem Text="About Raster Studio" Width="200"/>
                </MenuBarItem>
            </MenuBar>
        </StackPanel>

        <NavigationView Grid.Row="1" PaneDisplayMode="LeftCompact" IsPaneOpen="False" IsBackButtonVisible="Collapsed" IsPaneToggleButtonVisible="False">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Pictures" Content="Image" IsSelected="True"/>
                <NavigationViewItem Icon="Repair" Content="Export"/>
            </NavigationView.MenuItems>

            <Grid >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <usercontrols:PaletteControl x:ConnectionId='2' x:Name="PaletteControl" Grid.Column="0" Width="50"/>

                <usercontrols:RasterControl x:ConnectionId='3' x:Name="RasterControl" Grid.Column="2" Width="230"/>

                <usercontrols:RasterSlider x:ConnectionId='4' x:Name="RasterSlider" Grid.Column="3"/>

                <Grid Grid.Column="4">

                    <sbd:SlateView x:ConnectionId='5' 
            x:Name="SlateView"
            ElementShown="FrontAndBack" 
            AllowBlur="True"
            BlurEffectAmount="10"                   
            BlurEffectBorderMode="Hard"
            BlurEffectOptimization="Speed"
            BackgroundImageOpacity="0.75"
            Background="Black"
            ImageInterpolation="NearestNeighbor"
            ImageMargin="70,50,70,50"            
            />

                </Grid>

            </Grid>
        </NavigationView>
    </Grid>
</Page>

