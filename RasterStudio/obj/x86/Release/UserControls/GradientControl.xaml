<UserControl
    x:Class="RasterStudio.UserControls.GradientControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RasterStudio.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid CornerRadius="2.5" Margin="1" Background="White">
        <Grid x:ConnectionId='2' x:Name="GridColor" CornerRadius="2" Margin="1" BorderBrush="Black" BorderThickness="1">
            <TextBlock x:ConnectionId='3' x:Name="TextBlockText" Foreground="#1F1F1F" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"></TextBlock>
        </Grid>
    </Grid>
</UserControl>

