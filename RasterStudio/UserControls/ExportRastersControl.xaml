<UserControl
    x:Class="RasterStudio.UserControls.ExportRastersControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RasterStudio.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    >

    <StackPanel>

        <local:TagTextBox x:Name="TagTextBoxHeader" Title="Raster lines header" TextChanged="TagTextBox_TextChanged"/>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border  HorizontalAlignment="Center" Width="2" Background="#1f1f1f" Margin="0,0,0,5"></Border>

            <local:TagTextBox x:Name="TagTextBoxRasters" Grid.Column="1" Title="Color" TextChanged="TagTextBox_TextChanged"/>
        </Grid>

        <local:TagTextBox x:Name="TagTextBoxFooter" Title="Raster line Footer" TextChanged="TagTextBox_TextChanged"/>

    </StackPanel>
</UserControl>
