<UserControl
    x:Class="RasterStudio.UserControls.AtariImageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RasterStudio.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sbd="using:SamuelBlanchard.Xaml.Controls" 
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <sbd:SlateView 
            x:Name="SlateView"
            ElementShown="FrontAndBack" 
            AllowBlur="True"
            BlurEffectAmount="10"                   
            BlurEffectBorderMode="Hard"
            BlurEffectOptimization="Speed"
            BackgroundImageOpacity="0.75"
            Background="Black"
            ImageInterpolation="NearestNeighbor"
            ImageMargin="70,50,70,50"            
            />
    </Grid>
</UserControl>
